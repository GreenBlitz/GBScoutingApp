<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="com.example.scouting_app">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.VIBRATE" />

	<application
		android:allowBackup="true"
		android:fullBackupContent="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/Theme.GreenBlitzColorsGood"
		android:usesCleartextTraffic="true"
		tools:targetApi="n">
		<activity
			android:name=".activities.bs.LoadingPage"
			android:exported="true"
			tools:ignore="Instantiatable" />
		<activity
			android:name=".activities.LoginPage"
			android:exported="true"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".activities.RegistrationPage"
			android:exported="true"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".activities.GamesPage"
			android:exported="true"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".activities.ScoutingPrompt"
			android:exported="true"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".activities.CoachInformation"
			android:exported="true"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".activities.CoachInfoTeam"
			android:exported="true"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />
		<activity
			android:name=".activities.bs.ErrorActivity"
			android:exported="true"
			android:screenOrientation="portrait"
			tools:ignore="LockedOrientationActivity" />
	</application>

</manifest>