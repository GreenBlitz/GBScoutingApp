<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<!-- You might have noticed that the normal themes.xml and the night/themes.xml are identical. -->
	<!-- That is because we believe dark mode is the only mode. -->
	<style name="Theme.GreenBlitzColors" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/GB_green_1</item>
		<item name="colorPrimaryVariant">@color/GB_green_2</item>
		<item name="colorOnPrimary">@color/GB_yellow</item>
		<!-- Secondary brand color (GreenBlitz branded color scheme) -->
		<item name="colorSecondary">@color/GB_green_1</item>
		<item name="colorSecondaryVariant">@color/GB_green_2</item>
		<item name="colorOnSecondary">@color/GB_yellow</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
	</style>
</resources>